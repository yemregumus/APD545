<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.invmanagement.ModifyPartController">
    <children>
        <Label layoutX="14.0" layoutY="23.0" prefHeight="21.0" prefWidth="100.0" text="Modify Part">
            <font>
                <Font name="System Bold" size="15.0" />
            </font>
        </Label>

        <!-- ID Label -->
        <Label layoutX="30.0" layoutY="90.0" prefHeight="17.0" prefWidth="50" text="ID:" />
        <!-- ID TextField (Auto Gen - Disabled) -->
        <TextField fx:id="idField" disable="true" layoutX="150.0" layoutY="85.0" />

        <!-- Name Label -->
        <Label layoutX="30.0" layoutY="130.0" prefHeight="17.0" prefWidth="50" text="Name:" />
        <!-- Name TextField -->
        <TextField fx:id="nameField" layoutX="150.0" layoutY="125.0" />

        <!-- Inventory Level Label -->
        <Label layoutX="30.0" layoutY="170.0" prefHeight="17.0" prefWidth="100" text="Inventory Level:" />
        <!-- Inventory Level TextField -->
        <TextField fx:id="inventoryLevelField" layoutX="150.0" layoutY="165.0" />

        <!-- Price/Cost Label -->
        <Label layoutX="30.0" layoutY="210.0" prefHeight="17.0" prefWidth="100" text="Price/Cost:" />
        <!-- Price/Cost TextField -->
        <TextField fx:id="priceCostField" layoutX="150.0" layoutY="205.0" />

        <!-- Max Label -->
        <Label layoutX="30.0" layoutY="250.0" prefHeight="17.0" prefWidth="100" text="Max:" />
        <!-- Max TextField -->
        <TextField fx:id="maxField" layoutX="150.0" layoutY="245.0" />

        <!-- Min Label -->
        <Label layoutX="334.0" layoutY="250.0" prefHeight="17.0" prefWidth="100" text="Min:" />
        <!-- Min TextField -->
        <TextField fx:id="minField" layoutX="370.0" layoutY="245.0" />

        <!-- Radio Buttons for In-House and Outsourced Parts -->
        <RadioButton fx:id="inHouseRadioButton"  layoutX="148.0" layoutY="24.0" mnemonicParsing="false" text="In-House" />
        <RadioButton fx:id="outsourcedRadioButton"  layoutX="268.0" layoutY="24.0" mnemonicParsing="false" text="Outsourced" />

        <!-- Company/Machine ID Label -->
        <Label layoutX="30.0" layoutY="288.0" prefHeight="17.0" prefWidth="118.0" text="Company/Machine ID:" />
        <!-- Company/Machine ID TextField -->
        <TextField fx:id="companyMachineIdField" layoutX="150.0" layoutY="283.0" />

        <!-- Save and Cancel Buttons -->
        <Button fx:id="saveButton" onAction="#handleSaveButtonClick" layoutX="307.0" layoutY="340.0" mnemonicParsing="false" text="Save" />
        <Button fx:id="cancelButton" onAction="#handleCancelButtonClick" layoutX="372.0" layoutY="340.0" mnemonicParsing="false" text="Cancel" />
    </children>

</AnchorPane>